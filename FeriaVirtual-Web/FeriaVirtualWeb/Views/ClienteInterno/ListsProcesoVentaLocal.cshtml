@model IEnumerable<FeriaVirtualWeb.Models.ViewModels.ProcesoVentaViewModel>

@{
    Layout = "~/Views/Shared/_LayoutClienteInterno.cshtml";
}

<div class="breadcomb-area">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="breadcomb-list">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-form"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Compra de Productos</h2>
                                <p>Compre todos los productos que desee</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex">
    <div class="card text-center col-6 pr-0 pl-0 mr-2">
        <div class="card-header pr-0 pl-0">
            PRODUCTOR
        </div>
        <div class="card-body">
            <table class="table table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NOMBREPRODUCTOR)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FECHA)
                    </th>
                    <th>
                        @Html.DisplayName("ACCIONES")
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NOMBREPRODUCTOR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FECHA)
                        </td>
                        <td>
                            <a href="#card-comprar" class="btncomprar btn btn-success notika-btn-success" data-id="@item.PROCESO">Productos</a>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>

    <div class="card text-center col-6 pr-0 pl-0 ml-2">
        <div class="card-header pr-0 pl-0">
            COMPRAR PRODUCTOS
        </div>
        <div class="card-body" id="card-comprar">

        </div>
    </div>

</div>

<script>
    $(".btncomprar").click(function () {
        $("#card-comprar").load("/ClienteInterno/PutCompra/" + $(this).data("id"));
    });
</script>