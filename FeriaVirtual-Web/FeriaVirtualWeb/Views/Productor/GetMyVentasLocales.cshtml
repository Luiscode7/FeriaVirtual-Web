@model IEnumerable<FeriaVirtualWeb.Models.DataContext.PROCESOVENTA>

<div class="breadcomb-area">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="breadcomb-list">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-form"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Mis Procesos Locales</h2>
                                <p>Revise sus productos locales vendidos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #00c292">
                <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <br />
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<div class="card col-6 pr-0 pl-0 ml-2">
    <div class="card-header text-center pr-0 pl-0">
        Procesos Venta Locales
    </div>
    <div class="card-body" id="card-subasta">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IDPROCESOVENTA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHA)
                </th>
                <th>
                    @Html.DisplayName("ACCIONES")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDPROCESOVENTA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FECHA)
                    </td>
                    <td>
                        <a href="#exampleModalCenter" class="btnVerP btn btn-success notika-btn-success" data-toggle="modal" data-id="@item.IDPROCESOVENTA">Ver Productos</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    $(".btnVerP").click(function () {
        $(".modal-body").load("/Productor/GetProductComprados/" + $(this).data("id"));
    });
</script>