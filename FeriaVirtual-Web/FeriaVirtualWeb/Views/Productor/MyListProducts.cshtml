</div>

<a id="btnNuevo" href="#exampleModalCenter" class="btnVer btn btn-success notika-btn-success" data-toggle="modal">Productos&nbsp;&nbsp;<i class="fas fa-plus-circle"></i></a>
<br />
<br />
<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a id="externoid" class="nav-link" href="#card-procesos">Externo</a>
            </li>
            <li class="nav-item">
                <a id="localid" class="nav-link" href="#card-procesos">Local</a>
            </li>
        </ul>
    </div>
    <div class="card-body" id="card-procesos">
    </div>
</div>


<!-- Modal -->
<div class="modal fade modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #00c292">
                <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <br />
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var externo = $("#externoid");
        var local = $("#localid");
        var proceso = $("#card-procesos");
        var posicion = proceso.offset().top;

        $("#externoid").click(function () {
            $(this).addClass("active");
            local.removeClass("active");
            proceso.load("/Productor/MyProductsListProcesoExterno/");

            $('html, body').animate({
                scrollTop: posicion
            }, 500);

       
        });
            
        $("#localid").click(function () {
            $(this).addClass("active");
            externo.removeClass("active");
            proceso.load("/Productor/MyProductsListProcesoLocal/");

            $('html, body').animate({
                scrollTop: posicion
            }, 500);

        });

        $("#btnNuevo").click(function () {
            $(".modal-body").load("/Productor/GetListToAddNewProductos/");
        });

        $("#externoid").trigger("click");
    });

</script>
