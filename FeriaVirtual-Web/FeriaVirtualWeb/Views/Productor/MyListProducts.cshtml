@model IEnumerable<FeriaVirtualWeb.Models.DataContext.PRODUCTO>


<h2>Mis Productos</h2>
<br />
<a id="btnNuevo" href="#exampleModalCenter" class="btnVer btn btn-primary" data-toggle="modal">
    Ingresar Productos
</a>
<br />
<br />
<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a id="externoid" class="nav-link" href="#card-procesos">Externo</a>
            </li>
            <li class="nav-item">
                <a id="localid" class="nav-link" href="#card-procesos">Local</a>
            </li>
        </ul>
    </div>
    <div class="card-body" id="card-procesos">
    </div>
</div>


<!-- Modal -->
<div class="modal fade modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Productos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var externo = $("#externoid");
        var local = $("#localid");

        $("#externoid").click(function () {
            $(this).addClass("active");
            local.removeClass("active");
            $("#card-procesos").load("/Productor/MyProductsListProcesoExterno/");
        });

        $("#localid").click(function () {
            $(this).addClass("active");
            externo.removeClass("active");
            $("#card-procesos").load("/Productor/MyProductsListProcesoLocal/");
        });

        $("#btnNuevo").click(function () {
            $(".modal-body").load("/Productor/GetListToAddNewProductos/");
        }); 

        $("#externoid").trigger("click");     
    });    
</script>
