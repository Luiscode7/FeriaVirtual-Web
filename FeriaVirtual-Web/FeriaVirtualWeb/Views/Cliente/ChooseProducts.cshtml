<!-- Modal -->
<div class="modal fade modal fade bd-example-modal-lg" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("AddOrder", "Cliente", FormMethod.Post, new { id = "form-productosOrder" }))
            {
                <div class="modal-body">

                    <table class="table">
                        @for (var i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>
                                    @Html.CheckBoxFor(modelItem => Model[i].IsChecked, new { htmlAttributes = new { @class = "check" } })
                                    @Html.HiddenFor(modelItem => Model[i].IDPRODUCTO, new { id = "idprod" })
                                    @Html.HiddenFor(modelItem => Model[i].DESCRIPCION, new { id = "descrip" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model[i].DESCRIPCION, new { id = "descripcion" })
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => Model[i].CANTIDAD, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>

                        }
                    </table>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cerrar">Close</button>
                    <button type="submit" class="btn btn-primary" id="btnAgregar2">Agregar</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var form = $("#form-productosOrder");
        var botonAgregar = $("#btnAgregar2");

        $("#btnAgregar2").click(function () {
            $.ajax({
                url: form.attr('action'),
                type: "POST",
                dataType: 'html',
                data: form.serialize(),
                success: function (response) {
                    console.log(response);
                    if (response) {
                        $("#exampleModalCenter2").modal("hide");
                        location.reload(true);
                    }
                }
            });
            return false;
        });
    });
</script>