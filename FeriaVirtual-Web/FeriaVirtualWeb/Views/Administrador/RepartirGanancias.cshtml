    <script src="~/assest/js/wave-active.js"></script>*@
<script src="~/assest/js/plugins.js"></script>
<script src="~/assest/js/main.js"></script>

<script>
    $(document).ready(function () {

        var form = $("#form-ganancias");
        var btnRGanancias = $(".btnRGanancias");

        btnRGanancias.click(function () {
            $.ajax({
                url: form.attr('action'),
                type: "POST",
                dataType: 'html',
                data: form.serialize(),
                beforeSend: function () {
                    btnRGanancias.replaceWith($(".loadbuttonRG"));
                    $(".loadbuttonRG").html("<img src='@Url.Content("~/assest/img/loading.gif")'>");
                },
                success: function (response) {
                    if (response) {
                        $("#exampleModalCenter").modal("hide");
                        toastr.options = {
                            "positionClass": "toast-top-right",
                            "timeOut": "4000",
                        }
                        toastr["success"]("Las Ganancias Han sido Enviadas Exitosamente")
                    }
                }
            });
            return false;
        });
    });
</script>