@model IEnumerable<FeriaVirtualWeb.Models.DataContext.SUBASTA>

@{
    Layout = null;
}
<table class="table table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDSUBASTA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA)
        </th>
        <th>
            @Html.DisplayName("ACCIONES")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDSUBASTA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FECHA)
            </td>
            <td>
                <a href="#exampleModalCenter" class="btnDetalle btn btn-success notika-btn-success" data-toggle="modal" data-id="@item.IDSUBASTA">
                    Ofertas
                </a>
                <a href="#exampleModalCenter" class="btnOfertaEx btn btn-success notika-btn-success" data-toggle="modal" data-id="@item.IDSUBASTA">
                    Mejor Oferta
                </a>
            </td>
        </tr>
    }

</table>

<script>
    $(document).on('click','.btnDetalle',(function (e) {
        e.preventDefault();
        $(".modal-body").load("/Administrador/Transportistas/" + $(this).data("id"));
    }));

    $(document).on('click', '.btnOfertaEx', (function (e) {
        e.preventDefault();
        $(".modal-body").load("/Administrador/AceptarTransporte/" + $(this).data("id"));
    }));
</script>
