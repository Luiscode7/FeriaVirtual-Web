@model IEnumerable<FeriaVirtualWeb.Models.DataContext.PROCESOVENTA>

@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="breadcomb-area">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="breadcomb-list">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-form"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Procesos de Venta Local</h2>
                                <p>Concrete la venta para cada proceso</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex">
    <div class="card text-center col-6 pr-0 pl-0 mr-2">
        <div class="card-header pr-0 pl-0">
            Procesos Venta Local
        </div>
        <div class="card-body">
            <table class="table table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IDPROCESOVENTA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FECHA)
                    </th>
                    <th>
                        @Html.DisplayName("VENTA")
                    </th>
                    <th>
                        @Html.DisplayName("DETALLE")
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDPROCESOVENTA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FECHA)
                        </td>
                        <td>
                            <a href="#card-ventaL" class="btnConcretarL btn btn-success notika-btn-success" data-id="@item.IDPROCESOVENTA">Concretar</a>
                        </td>
                        <td>
                            <a href="#card-ventaL" class="btnDetalleL btn btn-success notika-btn-success ml-3" data-id="@item.IDPROCESOVENTA">Detalle</a>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>

    <div class="card text-center col-6 pr-0 pl-0 ml-2">
        <div class="card-header pr-0 pl-0">
            Detalle
        </div>
        <div class="card-body" id="card-ventaL">

        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #00c292">
                    <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <br />
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    $(".btnConcretarL").click(function () {
        $("#card-ventaL").load("/Administrador/DetalleProcesoVentaLocal/" + $(this).data("id"));
    });

    $(".btnDetalleL").click(function () {
        $("#card-ventaL").load("/Administrador/DetalleProcesoVentaLocalAfterToVenta/" + $(this).data("id"));
    });
</script>
