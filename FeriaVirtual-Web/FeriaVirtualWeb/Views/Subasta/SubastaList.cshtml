@model IEnumerable<FeriaVirtualWeb.Models.DataContext.SUBASTA>

<br />
<h4>Subastas</h4>
<br />

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDSUBASTA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA)
        </th>
        <th>
            @Html.DisplayName("ACCIONES")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDSUBASTA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA)
        </td>
        <td>
            <a href="#exampleModalCenter4" class="btnVerP btn btn-primary" data-toggle="modal" data-id="@item.PROCESOVENTAID">
                Ver Productos
            </a>
            <a href="#exampleModalCenter4" class="btnPostularS btn btn-primary" data-toggle="modal" data-id="@item.IDSUBASTA">
                Subastar
            </a>
        </td>
    </tr>
}

</table>

<div class="modal fade" id="exampleModalCenter4" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Productos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
            </div>
        </div>
    </div>
</div>


<script>
    $(document).on('click','.btnVerP',(function (e) {
            e.preventDefault();
        $(".modal-body").load("/Subasta/ProductsAccordingToProcesoVenta/" + $(this).data("id"));
    }));

    $(document).on('click', '.btnPostularS', (function (e) {
        e.preventDefault();
        $(".modal-body").load("/Subasta/AddTransportAndPrecioToSubasta/" + $(this).data("id"));
    }));


