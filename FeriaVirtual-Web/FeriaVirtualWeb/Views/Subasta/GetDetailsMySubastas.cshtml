@model FeriaVirtualWeb.Models.DataContext.TRANSPORTISTA

@{ 
    Layout = null;
    FeriaVirtualWeb.Models.ViewModels.ProcesoVentaViewModel clientes = ViewBag.datoscliente;
    FeriaVirtualWeb.Models.ViewModels.ProcesoVentaViewModel clientesL = ViewBag.datosclienteL;
}

<div>
    <div>@Html.DisplayName("Datos de Transporte")</div>
    <hr />
    <table class="table table-condensed table-sm">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.TIPOTRANSPORTE)
            </td>

            <td>
                @Html.DisplayFor(model => model.TIPOTRANSPORTE)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.ANCHO)
            </td>

            <td>
                @Html.DisplayFor(model => model.ANCHO)@(" " + "m")
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.ALTO)
            </td>

            <td>
                @Html.DisplayFor(model => model.ALTO)@(" " + "m")
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.LARGO)
            </td>

            <td>
                @Html.DisplayFor(model => model.LARGO)@(" " + "m")
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.CAPACIDADCARGA)
            </td>

            <td>
                @Html.DisplayFor(model => model.CAPACIDADCARGA)@(" " + "kg")
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.REFRIGERACION)
            </td>

            <td>
                @Html.DisplayFor(model => model.REFRIGERACION)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.PRECIO)
            </td>

            <td>
                @Html.DisplayFor(model => model.PRECIO)
            </td>
        </tr>

    </table>
    <div>@Html.DisplayName("Datos de Subasta")</div>
    <hr />
    <table class="table table-condensed table-sm">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.SUBASTAID)
            </td>

            <td>
                @Html.DisplayFor(model => model.SUBASTAID)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.ESTADOSUBASTA)
            </td>

            <td>
                @Html.DisplayFor(model => model.ESTADOSUBASTA)
            </td>
        </tr>
    </table>
    <div>@Html.DisplayName("Datos de Cliente")</div>
    <hr />
    <table class="table table-condensed table-sm">
        @if (clientes.TIPOPROCESO == "Externo")
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => clientes.NOMBREPRODUCTOR)
                </td>

                <td>
                    @Html.DisplayFor(model => clientes.NOMBREPRODUCTOR)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => clientes.DIRECCIONCLINICIAL)
                </td>
                <td>
                    @Html.DisplayFor(model => clientes.DIRECCIONCLINICIAL)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => clientes.TELEFONOCLI)
                </td>
                <td>
                    @Html.DisplayFor(model => clientes.TELEFONOCLI)
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => clientesL.NOMBRECLIENTE)
                </td>

                <td>
                    @Html.DisplayFor(model => clientesL.NOMBRECLIENTE)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => clientesL.DIRECCIONCLINICIAL)
                </td>
                <td>
                    @Html.DisplayFor(model => clientesL.DIRECCIONCLINICIAL)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => clientesL.TELEFONOCLI)
                </td>
                <td>
                    @Html.DisplayFor(model => clientesL.TELEFONOCLI)
                </td>
            </tr>
        }
    </table>
</div>
