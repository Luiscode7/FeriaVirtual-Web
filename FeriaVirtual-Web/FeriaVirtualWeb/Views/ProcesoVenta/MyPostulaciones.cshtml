@model IEnumerable<FeriaVirtualWeb.Models.ViewModels.ProcesoVentaViewModel>

<br />
<h4>Mis Postulaciones</h4>
<br />

<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">POSTULACIONES</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <table class="table table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PROCESO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TIPOPROCESO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ESTADO)
                </th>
                <th>
                    @Html.DisplayName("ACCIONES")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PROCESO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FECHA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TIPOPROCESO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ESTADO)
                    </td>
                    <td>
                        <a href="#exampleModalCenter5" class="btnDetails btn btn-primary notika-btn-primary" data-toggle="modal" data-id="@item.ORDEN">Detalles</a>
                        @if (item.ESTADO == "Aceptado")
                        {
                            <a href="#exampleModalCenter5" class="btnVenta btn btn-primary notika-btn-primary" data-toggle="modal" data-id="@item.ORDEN">Detalle Venta</a>
                        }
                        else
                        {
                            <a href="#exampleModalCenter5" class="btnVenta btn btn-primary notika-btn-primary" style="display:none" data-toggle="modal" data-id="@item.ORDEN">Venta</a>
                        }
                    </td>
                </tr>
            }

        </table>


    </div>
</div>

<div class="modal fade modal fade bd-example-modal-lg" id="exampleModalCenter5" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #00c292">
                <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<script>
    $(".btnDetails").click(function () {
        $(".modal-body").load("/ProcesoVenta/MyPostulacionesDetails/" + $(this).data("id"));
    });

    $(".btnVenta").click(function () {
        $(".modal-body").load("/Productor/GetMyVenta/" + $(this).data("id"));
    });
</script>