@{ 
    Layout = "~/Views/Shared/_LayoutConsultor.cshtml";
}

<div class="breadcomb-area">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="breadcomb-list">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-form"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Reportes</h2>
                                <p>Descargue y Revise reportes de Maipo Grande</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card col-6 pr-0 pl-0 ml-2">
    <div class="card-header text-center pr-0 pl-0">
        Reportes
    </div>
    <div class="card-body" id="card-subasta">
        <table class="table table-condensed">
            <tr>
                <td>
                    @Html.DisplayName("Listado de Ventas")
                </td>
                <td>
                    @Html.ActionLink("Reporte PDF", "ExportPDFListaVentas", null, new { @class = "btn btn-success notika-btn-success" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayName("Listado de Ordenes de Compra")
                </td>
                <td>
                    @Html.ActionLink("Reporte PDF", "ExportPDFListaOrdenes", null, new { @class = "btn btn-success notika-btn-success" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayName("Listado de Subastas Venta Externa")
                </td>
                <td>
                    @Html.ActionLink("Reporte PDF", "ExportPDFSubastaExterna", null, new { @class = "btn btn-success notika-btn-success" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayName("Listado de Subastas Venta Local")
                </td>
                <td>
                    @Html.ActionLink("Reporte PDF", "ExportPDFSubastaLocal", null, new { @class = "btn btn-success notika-btn-success" })
                </td>
            </tr>
